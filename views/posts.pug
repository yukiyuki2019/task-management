doctype html
html(lang="ja")
  head
    meta(charset="UTF-8")
    link(rel="stylesheet",
    href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css",
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm",
    crossorigin="anonymous")

    title todo_list
  body.container
    div.my-3
      a(href="/logout").btn.btn-info.float-right ログアウト
      h1 #{user} のTODO LIST
    form(method="post" action="/posts")
      div.input-group.mb-3
        input(type="text", name="content", id="newTask" placeholder='タスクを追加').form-control
        div.input-group-append
          button(type="submit").btn.btn-outline-primary 追加
        
    h2 一覧
    each post in posts
      - var isUser = (user === post.postedBy)
      if isUser
        div.list-group.my-3
          li.list-group-item #{post.content}
            form(method="post" action="/posts?delete=1")
              input(type="hidden", name="id", value=post.id)
              button(type="submit").btn.btn-danger.float-right 削除
      else
        div.card.d-none

    script(src="https://code.jquery.com/jquery-3.4.1.slim.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js",
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl",
    crossorigin="anonymous")