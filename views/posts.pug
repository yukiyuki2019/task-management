doctype html
html(lang="ja")
  head
    meta(charset="UTF-8")
    title todo_list
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous")
  body
    h1 TODO LIST
    a(href="logout") ログアウト
    h2 新規タスク
    form(method="post" action="/posts")
      input(type="text", name="content", placeholder='新規タスク')
      button(type="submit") 追加

      main.p-3
        ul.nav.nav-tabs
          li.nav-item
            a.nav-link.active(href="#task1" data-toggle="tab") 緊急＆重要
          li.nav-item
            a.nav-link(href="#task2" data-toggle="tab") 緊急
          li.nav-item
            a.nav-link(href="#task3" data-toggle="tab") 重要
          li.nav-item
            a.nav-link(href="#task4" data-toggle="tab") 完了済

        div.tab-content
          div#task1.tab-pane.active
            each post in posts
              li #{post.content}
              hr

          div#task2.tab-pane
            each post in posts
              li #{post.content}
              hr


          div#task3.tab-pane
            each post in posts
              li #{post.content}
              hr

          div#task4.tab-pane
            each post in posts
              li #{post.content}
              hr
